doctype
html(lang='es')
	head
		meta(charset='utf-8')
		title Formulario (PUG - BOOTSTRAP)
		link(href='css/bootstrap.css' rel="stylesheet")
	body
		main.container
			//- 
			//- Formulario de Login
			section.row
				div.col-md-4.col-md-offset-4
					fieldset
						legend
							h3.text-muted.text-center Formulario de Login 
								i.glyphicon.glyphicon-user
						form(method="post")
							div.form-group
								input.form-control(name="email" type="email" placeholder="Correo Electronico" required=true)
							div.form-group
								input.form-control(name="password" type="password" placeholder="Contraseña" required=true)
							div.form-group
								input.form-control.btn.btn-info(type="submit" value="Iniciar Sesión")
			//- 
			//- Formulario de Registro
			section.row
				div.col-md-6.col-md-offset-3
					fieldset
						legend
							h3.text-muted.text-center Formulario de Registro &nbsp;
								i.glyphicon.glyphicon-list
							
						form(method="post")
							div.form-group
								input.form-control(type="text" name="name" placeholder="Nombre Completo" required=true)
							div.form-group
								select.form-control(required=true name="gender")
									option Selecione Género
									option(value="F") Femenino
									option(Value="M") Masculino
							div.form-group
								input.form-control(type="date" name="date" placeholder="Fecha Nacimiento" required=true)
							
							div.form-group.text-muted
								small Deportes Favoritos
								br
								label(for="s1")
									input(type="checkbox" name="sport" value="Soccer" id="s1") 
									| &nbsp; Fútbol
								br

								label(for="s2")
									input(type="checkbox" name="sport" value="Basket" id="s2") 
									| &nbsp; Baloncesto
								br

								label(for="s3")
									input(type="checkbox" name="sport" value="Besibol" id="s3") 
									| &nbsp; Béisbol
								br
								label(for="s4")
									input(type="checkbox" name="sport" value="Tennis" id="s4") 
									| &nbsp; Tenis

								div.form-group.text-muted
									textarea.form-control(name="description" required=true placeholder="Descripción" rows="6")

								div.form-group.text-muted
									input.form-control.btn.btn-info(type="submit" value="Registrar Datos")

								div.form-group.text-muted
									input.form-control.btn.btn-danger(type="reset" value="Limpiar Datos")

